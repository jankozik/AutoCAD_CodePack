<Window x:Class="Dreambuild.AutoCAD.MultiInputs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        Height="300" Width="400" Background="WhiteSmoke" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Title="Inputs" ResizeMode="NoResize">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1" Margin="12,12,12,41">
            <ScrollViewer Name="scrollViewer1" Background="White">
                <Border BorderBrush="Gray" BorderThickness="0,0,1,0">
                    <StackPanel x:Name="stack1" Margin="5,0,0,0">

                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Border>
        <Button Content="OK" Height="23" HorizontalAlignment="Right" Margin="0,0,93,12" Name="btnOk" VerticalAlignment="Bottom" Width="75" Click="btnOk_Click" />
        <Button Content="Cancel" Margin="0,0,12,12" Name="btnCancel" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnCancel_Click" />
    </Grid>
</Window>
