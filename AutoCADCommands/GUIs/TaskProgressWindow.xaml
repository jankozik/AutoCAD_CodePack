<Window x:Class="Dreambuild.AutoCAD.TaskProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Processing..." Height="120" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <ProgressBar x:Name="ProgressBar" Height="30" Margin="10" />
        <Button x:Name="CancelButton" Height="25" Width="80" Content="Cancel task" />
    </StackPanel>
</Window>
